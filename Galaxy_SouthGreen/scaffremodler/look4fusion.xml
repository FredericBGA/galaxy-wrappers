<tool id="look4fusion" name="look4fusion" version="0.1"> 
    <description> : Look for possible scaffold fusions and junction using ApMap workflow and conf4circos outputs</description>  
    <command>
		source $__tool_directory__/include_scaffremodler.sh ;
        $__tool_directory__/look4fusion.py
		--config $config
		--bound $bound
		--out $out
		--out_tar $out_tar
		
    </command>
    <inputs>
		<param name="config" type="data" label="The circos_conf file generated by conf4circos" />
		<param name="bound" type="integer" value="10000" label="Scaffold boundary searched" />
		<param name="OUT" type="text" label="Identifier for output" />
    </inputs>
    <outputs>
        <data format="txt" name="out" label="$OUT possible" />
        <data format="tar" name="out_tar" label="$OUT circos_possible.tar" />
    </outputs>
    <help>
    </help>
</tool>  