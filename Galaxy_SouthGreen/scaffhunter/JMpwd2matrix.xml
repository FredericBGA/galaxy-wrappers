<tool id="JMpwd2matrix" name="JMpwd2matrix" version="0.1"> 
    <description> : Convert JoinMap pair-wise file to a tabulated matrix</description>  
    <command>
        $__tool_directory__/JMpwd2matrix.py  
		--pwd $pwd
		--lod $lod
		--rec $rec
    </command>
    <inputs>  
    	<param name="pwd" type="data" format="txt" label="Pairwise file" />
		<param name="OUT" type="text" label="Prefix of output files" />
    </inputs>
    <outputs>
        <data format="txt" name="lod" label="$OUT LOD matrix" />
        <data format="txt" name="rec" label="$OUT REC matrix" />
    </outputs>
    <help>
    </help>
</tool>
